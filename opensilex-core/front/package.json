{
    "name": "opensilex-core",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service build --target lib --formats umd-min src/index.ts --mode development --watch",
        "build": "vue-cli-service build --target lib --formats umd-min src/index.ts --mode production",
        "lint": "vue-cli-service lint",
        "check:outdated": "yarn outdated || cd .",
        "build:types": "dts-generator --project ./ --out ./types/opensilex-core.d.ts --prefix opensilex-core"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "4.1.2",
        "@vue/cli-plugin-eslint": "4.1.2",
        "@vue/cli-plugin-router": "4.1.2",
        "@vue/cli-plugin-typescript": "4.1.2",
        "@vue/cli-plugin-vuex": "4.1.2",
        "@vue/cli-service": "4.1.2",
        "@vue/eslint-config-typescript": "^5.0.1"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended",
            "@vue/typescript"
        ],
        "rules": {
            "no-unused-vars": "off"
        },
        "parserOptions": {
            "parser": "@typescript-eslint/parser"
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "dependencies": {
        "moment": "^2.24.0",
        "vue-i18n": "^8.15.3",
        "vue-multiselect": "^2.1.6"
    }
}
