{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules"],
        "types": [
            "webpack-env",
            "system"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/lib/*": [
                "src/lib/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx", "shims-tsx.d.ts", "shims-vue.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}